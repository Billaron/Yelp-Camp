<% include ../partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-3">  
            <p class="lead">Yelp Camp </p>
            <div class="list-group">
                <li class ="list-group-item active">Info 1</li>
                <li class ="list-group-item">Info 2</li>
                <li class ="list-group-item">Info 3</li>
            </div>
        </div>
        <div class = "col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src = "<%= campground.img%>" >
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/Night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <h6 class ="pull-right">created by "<%=campground.author.username%>"</h6>    
                    <p> <%=campground.description%></p>    
                </div>
            </div>
            <div class = "well">
                <div class="text-right">
                     <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Add new comment</a>
                </div>
                <hr></hr>
                <% campground.comments.forEach(function(comment) {%>
                <div class ="row">
                    <div class="col-md-12">
                        <strong> <%= comment.author.username%> </strong>
                        <span class="pull-right">10 dayss ago</span> 
                        <p>
                                <%= comment.text%>
                        </p>
                        </div>
                    </div>
                <% })%>
            </div>
        </div>
    </div>
</div>
<%include ../partials/footer%>