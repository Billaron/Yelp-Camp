<% include ../partials/header%>

<div class = "row">
    
    <div class= "container">    
        <h1 style = "text-align :center">Create a new Campground</h1>
        <div style = "width : 30%; margin :50px auto;">
            <form action ="/campgrounds" method="POST">
                <div class = "form-group">    
                    <input class = "form-control" type ="text" name="name" placeholder ="campground name"></input>
                </div>
                 <div class = "form-group">    
                    <input class = "form-control" type ="number" name="price" placeholder ="campground price" min = "0.0" step = "0.1" ></input>
                </div>
                <div class = "form-group">
                    <input class = "form-control" type="text" name ="img"placeholder="insert image url"></input>
                </div>
                 </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="name,state">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type="text" name ="description"placeholder="Describe the camp in a few words"></input>
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block"> submit </button>
                </div>
            </form>
        <a href="/campgrounds">go back</a>
        </div>
        
          
    </div>
</div>    
<% include ../partials/footer%>